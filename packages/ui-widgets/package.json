{
  "name": "@paperwork/ui-widgets",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "classnames": "^2.2.6",
    "cleave.js": "^1.5.10",
    "debounce": "^1.2.0",
    "draft-js": "^0.10.5",
    "draftjs-to-html": "^0.8.4",
    "rc-tooltip": "^4.0.3",
    "react-custom-scrollbars": "^4.2.1",
    "react-infinite-loader": "^1.0.4",
    "react-infinite-scroller": "^1.2.4",
    "react-modal": "^3.11.2",
    "react-select": "^3.1.0",
    "react-toggle": "^4.1.1",
    "shortid": "^2.2.15"
  },
  "main": "build/index.js",
  "types": "build/types/src/index.d.ts",
  "scripts": {
    "storybook": "../../node_modules/.bin/start-storybook -p 9009",
    "build-storybook": "../../node_modules/.bin/build-storybook",
    "build": "webpack --config ./config/webpack.config.js",
    "test": "node scripts/test.js --env=jsdom",
    "test:watch": "node scripts/test.js --watch --env=jsdom",
    "lint": "tslint --force --fix \"src/**/*.tsx\" \"**/__tests__/**/*.spec.tsx\" -e \"**/node_modules/**\"",
    "statistic": "webpack --profile --json > stats.json"
  },
  "devDependencies": {
    "@babel/core": "^7.4.3",
    "@types/debounce": "^1.2.0",
    "@types/classnames": "^2.2.10",
    "@types/cleave.js": "^1.4.1",
    "@types/draft-js": "^0.10.29",
    "@types/rc-tooltip": "^3.7.2",
    "@types/react-custom-scrollbars": "^4.0.6",
    "@types/react-infinite-scroller": "^1.2.1",
    "@types/react-modal": "^3.10.5",
    "@types/react-select": "^3.0.11",
    "@types/react-toggle": "^4.0.2",
    "@types/shortid": "^0.0.29",
    "autoprefixer": "7.1.6",
    "babel-jest": "20.0.3",
    "babel-loader": "^8.0.6",
    "css-loader": "^3.4.2",
    "fork-ts-checker-webpack-plugin": "^4.1.3",
    "jest": "20.0.4",
    "pre-push": "^0.1.1",
    "react-docgen-typescript-loader": "^3.6.0",
    "ts-jest": "22.0.1",
    "ts-loader": "^6.2.1",
    "tslint": "^5.7.0",
    "tslint-config-airbnb": "^5.11.1",
    "tslint-config-prettier": "^1.10.0",
    "tslint-react": "^3.2.0",
    "webpack": "4.16.5",
    "webpack-cli": "^3.3.11"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!**/*.d.ts"
    ],
    "setupFiles": [
      "<rootDir>/config/jest/enzyme.js"
    ],
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.ts?(x)",
      "<rootDir>/src/**/?(*.)(spec|test).ts?(x)"
    ],
    "testEnvironment": "node",
    "testURL": "http://localhost",
    "transform": {
      "^.+\\.(js|jsx|mjs)$": "<rootDir>/node_modules/babel-jest",
      "^.+\\.tsx?$": "<rootDir>/config/jest/typescriptTransform.js",
      "^.+\\.css$": "<rootDir>/config/jest/cssTransform.js",
      "^(?!.*\\.(js|jsx|mjs|css|json)$)": "<rootDir>/config/jest/fileTransform.js"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx|mjs|ts|tsx)$"
    ],
    "moduleNameMapper": {
      "^react-native$": "react-native-web"
    },
    "moduleFileExtensions": [
      "web.ts",
      "ts",
      "web.tsx",
      "tsx",
      "web.js",
      "js",
      "web.jsx",
      "jsx",
      "json",
      "node",
      "mjs"
    ],
    "globals": {
      "ts-jest": {
        "tsConfigFile": "tsconfig.test.json"
      }
    },
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ]
  }
}
